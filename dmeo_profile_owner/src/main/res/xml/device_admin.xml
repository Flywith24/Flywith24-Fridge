<?xml version="1.0" encoding="utf-8"?>
<device-admin xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-policies>
        <!-- 密码长度限制 -->
        <limit-password />
        <!-- 监控屏幕解锁尝试次数 -->
        <watch-login />
        <!-- 更改锁屏密码 -->
        <reset-password />
        <!-- 锁屏(可实现一键锁屏功能) -->
        <force-lock />
        <!-- 清除所有数据 -->>
        <wipe-data />
        <!-- 设置锁屏密码的有效期 -->
        <expire-password />
        <!-- 设置存储设备加密 -->
        <encrypted-storage />
        <!-- 禁用相机 -->
        <disable-camera />
    </uses-policies>
</device-admin>